ul.main-menu
    for menuItem in menu
        if(currentPage == menuItem.singleName)
            a.main-menu__link(href=menuItem.singleName + ".html")
                li.main-menu__item.active
                    img.main-menu__icon(src="./img/menu-icons/" + menuItem.singleName + ".svg")
                    span.main-menu__span= menuItem.name
        else
            a.main-menu__link(href=menuItem.singleName + ".html")
                li.main-menu__item
                    img.main-menu__icon(src="./img/menu-icons/" + menuItem.singleName + ".svg")
                    span.main-menu__span= menuItem.name