extends ./template/config/main-layout

append config
    -var currentPage = "nota-credito"

block content
    .tab
        .tab__top
            span.tab__title EMITIR NOTA DE CRÉDITO
        .tab__content
            .container.to-left
                form(action="index.html", method="POST")
                    //- Tipo de documento, serie, buscar
                    .row.mb-1
                        .col-lg-4
                            select.native-select.bordered(name="tipo-documento")
                                option(value="", disabled, selected) Tipo de Documento
                                option(value="1") Factura
                                option(value="2") Boleta
                        .col-lg-4
                            label.field__label.horizontal
                                .field__tag Serie
                                input.field.disabled(type="text", size="3", name="serie-cod", disabled="disabled", value="—")
                                | &nbsp;
                                input.field.bordered(type="text", size="12", name="serie", value="", disabled)
                        .col-lg-2
                            button.btn.alt(type="button", name="search", disabled) Buscar
                            .spinner: img(src="./img/spinner.webp")
                    
                    //- Tipo de nota y tipo de operación
                    .row.mb-1
                        .col-lg-4
                            select.native-select.bordered(name="tipo-nota")
                                option(value="", disabled, selected) Tipo de Nota de Crédito
                                option(value="1") Anulación de la operación
                                option(value="2") Anulación por error en el RUC
                                option(value="3") Corrección por error en la descripción
                                option(value="4") Descuento global
                                option(value="5") Descuento por item
                                option(value="6") Devolución total
                                option(value="7") Devolución por item
                                option(value="8") Bonificación
                                option(value="9") Dismunción en el valor
                        .col-lg-4
                            select.native-select.bordered(name="tipo-operacion")
                                option(value="", disabled, selected) Tipo de Operación
                                option(value="1") Venta interna
                                option(value="2") Anticipio o deducción de anticipio en venta interna 
                                option(value="3") Exportación

                    //- Fechas
                    .row
                        .col-lg-4
                            label.label--inline
                                span Fecha de emisión
                                input.field.bordered(type="date", name="fecha-emision")
                                //- span.response.error Debe elegir la fecha de emisión
                        .col-lg-4
                            label.label--inline
                                span Fecha de emisión
                                input.field.bordered(type="date", name="fecha-emision")
                                //- span.response.error Debe elegir la fecha de emisión

                    .row.mtb-2
                        .col-lg-8
                            label.field__label.vertical
                                .field__tag Motivo o sustento por el cual se emitirá la Nota de Crédito
                                textarea.field.bordered.block.textarea(name="")
                    
                    .row
                        .col-12
                            button.btn.bordered(type="button") PREVISUALIZAR
                            input.btn.bordered(type="submit", value="EMITIR")
                
block scripts
    script(src="js/nota-credito.js")