extends ./template/config/main-layout

append config
    -var currentPage = "factura"

block content
    .tab
        .tab__top
            span.tab__title VISTA PREVIA
        .tab__content
            .container-fluid
                .row.preview__top
                   .col-8
                    .preview__top-left
                        //- img(src="#", alt="")
                        P EMPRESA S.A.C.
                        p AV. OSCAR BENAVIDES 1059. RESIDENCIAL LOS ALAMOS
                        p CERCADO-LIMA-LIMA
                   .col-4
                    .preview__top-right
                        p RUC: 20483178085
                        p FACTURA ELECTRÓNICA
                        P F001-0000007
                
                .row.preview__client
                    .col-8
                        .preview__client-info
                            p
                                b Señor(es): 
                                | CLIENTE S.A.C.
                            p
                                b RUC No: 
                                | 10486478085
                            p
                                b Dirección: 
                                | DIRECCION DEL ESTABLECIMIENTO EMISOR

                    .col-4
                        .preview__client-date
                            table
                                tr
                                    td.w-100: b Fecha de vencimiento
                                    td 20/06/2017
                                tr
                                    td.w-100: b Fecha de emisión
                                    td 20/06/2017

                .row.preview__products
                    .col-12
                        table.table
                            thead
                                tr
                                    td.w-90: span.field__tag.center Cantidad
                                    td.w-90: span.field__tag.center U. de medida
                                    td: span.field__tag.center Descripción
                                    td.w-90: span.field__tag.center Valor Unit.
                            tbody
                                - for (i= 0; i < 3; i++)
                                    tr
                                        td: input.field.default.block(type="text", value="01", disabled)
                                        td: input.field.default.block(type="text", value="SOLES", disabled)
                                        td: input.field.default.block(type="text", value="DESCRIPCIÓN DEL PRODUCTO O SERVICIO", disabled)
                                        td: input.field.default.block(type="text", value="3000.00", disabled)

                .row.preview__footer
                    .col-9
                        .preview__footer-left
                            p SON: MIL CUATROCIENTOS CINCUENTA Y OCO CON 90/100 Soles

                            .row
                                .col-9.field__label.vertical
                                    span.field__tag.mb-1 Observación
